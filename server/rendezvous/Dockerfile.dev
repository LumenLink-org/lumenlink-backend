FROM golang:1.21-alpine AS dev

# Install build dependencies
RUN apk add --no-cache git make gcc musl-dev

# Install Air for hot reload
RUN go install github.com/cosmtrek/air@v1.49.0

WORKDIR /app

# Copy go.mod first
COPY go.mod ./

# Generate go.sum with all dependencies
RUN go mod download 2>/dev/null || true

# Copy all source code
COPY . .

# Force regenerate go.sum and download all dependencies
RUN go mod tidy -v && go mod download -x

# Test build to verify everything compiles
RUN go build -o /tmp/test-build ./cmd/server && rm /tmp/test-build

# Expose port
EXPOSE 8080

# Run with Air for hot reload
CMD ["air", "-c", ".air.toml"]
